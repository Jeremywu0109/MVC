@model prj1081746FinalExam.Models.Employee

@{
    ViewBag.Title = "Index4";
}

<h2>員工訂單查詢</h2>

<div class="row">
    <div class="col-md-3">

        <p>
            @Html.ActionLink("1", "Index4", new { EMP_ID = 1 })
        </p>
        <p>
            @Html.ActionLink("2", "Index4", new { EMP_ID = 2 })
        </p>
        <p>
            @Html.ActionLink("3", "Index4", new { EMP_ID = 3 })
        </p>
        <p>
            @Html.ActionLink("4", "Index4", new { EMP_ID = 4 })
        </p>
        <p>
            @Html.ActionLink("5", "Index4", new { EMP_ID = 5 })
        </p>
        <p>
            @Html.ActionLink("6", "Index4", new { EMP_ID = 6 })
        </p>
        <p>
            @Html.ActionLink("7", "Index4", new { EMP_ID = 7 })
        </p>
        <p>
            @Html.ActionLink("8", "Index4", new { EMP_ID = 8 })
        </p>
        <p>
            @Html.ActionLink("9", "Index4", new { EMP_ID = 9 })
        </p>
        <p>
            @Html.ActionLink("13", "Index4", new { EMP_ID = 13 })
        </p>


    </div>
    <div class="col-md-9">
        <table class="table">
            <tr>
                <th>員工編號</th>
                <th>訂單號碼</th>
                <th>收貨人</th>
                <th>送貨地址</th>
                <th></th>
            </tr>
            @foreach (var item in Model.employee)
            {
                <tr>
                    <td>@item.員工編號</td>
                    <td>@item.訂單號碼</td>
                    <td>@item.收貨人</td>
                    <td>@item.送貨地址</td>
                    <td>
                        <a href="@Url.Action("Edit")?ORDER_ID=@item.訂單號碼" class="btn btn-warning">編輯</a>
                        @Html.ActionLink("刪除", "Delete",
                            new { ORDER_ID = item.訂單號碼},
                            new
                            {
                                onclick = "return confirm('確定要刪除嗎?');",
                                @class = "btn btn btn-danger"
                            })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>